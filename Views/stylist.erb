<h1><%= @stylist.stylist_name() %></h1>



  <h3>Edit this stylist:</h3>

  <form action="/stylists/stylist/<%= @stylist.stylist_id() %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="stylist_name">Name:</label>
    <input id="stylist_name" name="stylist_name" type="text">


    <button type="submit">Edit Stylist</button>

  </form>
    <h3>Delete this Stylist:</h3>

    <form action="/stylists/stylist/<%= @stylist.stylist_id() %>" method="post">
      <input name="_method" type="hidden" value="delete">

      <button type="submit">Delete Stylist</button>

    </form>

  <p><a href="/">Return to Main Page</a></p>
